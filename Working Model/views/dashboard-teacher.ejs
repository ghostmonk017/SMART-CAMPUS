  <style>
   body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fc;
            margin: 0;
            padding: 0;
        }
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            padding-top: 20px;
        }
        .sidebar .logo {
            text-align: center;
            margin-bottom: 30px;
        }
        .sidebar .logo img {
            width: 150px;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
        .sidebar ul li {
            padding: 15px 20px;
            color: #333;
        }
        .sidebar ul li i {
            margin-right: 10px;
        }
        .sidebar ul li:hover, .sidebar ul li.active {
            background-color: #f1f1f1;
            cursor: pointer;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff;
            padding: 10px 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .header .search-bar {
            display: flex;
            align-items: center;
        }
        .header .search-bar input {
            padding: 5px 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .header .user-info {
            display: flex;
            align-items: center;
        }
        .header .user-info img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-left: 10px;
        }
        .header .user-info .notifications {
            margin-right: 20px;
        }
        .header .user-info .notifications i {
            margin-right: 5px;
        }
        .dashboard {
            margin-top: 20px;
        }
        .dashboard h2 {
            margin-bottom: 20px;
        }
        .dashboard .cards {
            display: flex;
            justify-content: space-between;
        }
        .dashboard .card {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 30%;
            text-align: center;
        }
        .dashboard .card h3 {
            margin-bottom: 10px;
        }
        .dashboard .card p {
            margin: 0;
        }
        .dashboard .recent-activity, .dashboard .news-updates {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
        .dashboard .recent-activity h3, .dashboard .news-updates h3 {
            margin-bottom: 20px;
        }
        .dashboard .recent-activity ul, .dashboard .news-updates ul {
            list-style: none;
            padding: 0;
        }
        .dashboard .recent-activity ul li, .dashboard .news-updates ul li {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #f1f1f1;
        }
        .dashboard .recent-activity ul li:last-child, .dashboard .news-updates ul li:last-child {
            border-bottom: none;
        }
        .dashboard .recent-activity ul li span, .dashboard .news-updates ul li span {
            display: flex;
            align-items: center;
        }
        .dashboard .recent-activity ul li span i, .dashboard .news-updates ul li span i {
            margin-right: 10px;
        }

        
  </style>
